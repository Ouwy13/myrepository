{
  "workbench.colorTheme": "Bearded Theme Vivid Black",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 20,
  //Expaçamento de tecla
  "editor.letterSpacing": 0,
  //Expaçamento de tinha
  "editor.lineHeight": 1.6,
  //Ligatures
  "editor.fontLigatures": true,
  //Tamanho do testo na tela
  "editor.rulers": [80, 120],
  // Borda da linha
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "short",
  // Pasta
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "workbench.tree.indent": 18,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // Diretorio do arquivo acima
  "breadcrumbs.enabled": false,

  "workbench.editor.showTabs": "none", //Barra de codigos abertos
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  "editor.minimap.autohide": true,
  "editor.minimap.sectionHeaderFontSize": 10,
  // Scroll
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "auto",
  // Status Bar abaixo
  "workbench.statusBar.visible": false,
  // Terminal
  "terminal.integrated.fontFamily": "GeistMono Nerd Font",
  "terminal.integrated.cwd": "",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },

  // Apc++
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "frame": false
  },
  "apc.header": {
    "height": 36
  },
  //Espaçamento nas pastas lateral
  "apc.listRow": {
    "height": 24
  },

  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".custom-hover > h2": false,
    ".draggable > h2": false,
    ".editor-actions": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },
  // Barra Superior
  "window.title": "𝓥𝓢𝓒𝓸𝓭𝓮 𝓭𝓸 𝓩𝐞́ 亗セ🥀",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,

  "errorLens.statusBarColorsEnabled": true,
  // Git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // Animação
  "editor.guides.highlightActiveIndentation": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "workbench.reduceMotion": "off",
  // Papel de Parede
  "background.windowBackgrounds": [
    "c:/Users/Administrator/Pictures/1351415.png"
  ],

  "background.backgroundBlur": ["6px", "0", "0", "0"],

  "editor.formatOnSave": true,
  "window.newWindowProfile": "Padrão",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "workbench.editor.enablePreview": false,
  "workbench.layoutControl.enabled": false
}
